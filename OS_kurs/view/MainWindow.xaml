<Window x:Class="OS_kurs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OS_kurs"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="30*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="20*"/>
        </Grid.ColumnDefinitions>
        <Menu Height="25" Grid.Column="1" Grid.ColumnSpan="2">
            <MenuItem Header="Файл">
                <MenuItem Header="Сохранить txt" Command="{Binding SaveFileCommand}"></MenuItem>
                <MenuItem Header="Открыть txt" Command="{Binding OpenFileCommand}"></MenuItem>
            </MenuItem>
            <MenuItem Header="Справка" >
                <MenuItem Header="Информация о приложении" Command="{Binding OpenHelpCommand}" ></MenuItem>
                <MenuItem Header="Как пользоваться" Command="{Binding OpenInstructionCommand}"></MenuItem>
            </MenuItem>
        </Menu>
        <TextBlock Grid.Column="1" Grid.Row="1" TextWrapping="Wrap" Text="Ошибки:" VerticalAlignment="Bottom"/>
        <ScrollViewer Grid.Column="1" Grid.Row="2" Grid.RowSpan="3" Grid.ColumnSpan="8">
            <TextBlock  TextWrapping="Wrap" Text="{Binding StrErrors}"  Background="#FFC7C7C7"
                   ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Auto" />
        </ScrollViewer>
        <TextBlock ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Auto" 
            Grid.Column="1" Grid.Row="5" TextWrapping="Wrap" Text="Результат:" VerticalAlignment="Bottom"/>
        <ScrollViewer Grid.Column="1" Grid.Row="6" Grid.RowSpan="7" Grid.ColumnSpan="8">
            <TextBlock  TextWrapping="Wrap" Text="{Binding StrCorrectData}"  Background="#FFC7C7C7" />
        </ScrollViewer>
        <Button Content="Найти ошибки" Grid.Row="5" VerticalAlignment="Center"  Grid.Column="8" Command="{Binding FindErrorsCommand}"/>
        <Button Content="Исправить" Grid.Row="13" VerticalAlignment="Center"  Grid.Column="8" Command="{Binding StartCorrectionCommand}"/>
